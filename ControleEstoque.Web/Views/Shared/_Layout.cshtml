<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Controle de Estoque</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
   
 

@*</head>*@
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Controle de Estoque", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ">
                    <li>
                        <div class="dropdown">
                            <button class="btn-lg btn-warning dropdown-toggle" type="button" data-toggle="dropdown">
                                Cadastro
                                <span class="caret"></span>
                            </button>

                            <ul class="dropdown-menu">

                                <li>@Html.ActionLink("Grupo de Produtos", "GrupoProduto", "Cadastro")</li>
                                <li>@Html.ActionLink("Marcas de produtos", "MarcaProduto", "Cadastro")</li>
                                <li>@Html.ActionLink("Locais de Armazenamento", "LocalProduto", "Cadastro")</li>
                                <li>@Html.ActionLink("Unidade de medida", "UnidadeMedida", "Cadastro")</li>
                                <li>@Html.ActionLink("Produtos", "Produto", "Cadastro")</li>
                                <li>@Html.ActionLink("Estados", "Estados", "Cadastro")</li>
                                <li>@Html.ActionLink("Países", "Pais", "Cadastro")</li>
                                <li>@Html.ActionLink("Cidades", "Cidade", "Cadastro")</li>
                                <li>@Html.ActionLink("Fornecedores", "Fornecedor", "Cadastro")</li>
                                <li>@Html.ActionLink("Perfis de Usuário", "PerfilUsuario", "Cadastro")</li>
                                <li>@Html.ActionLink("Usuário", "Usuario", "Cadastro")</li>
                            </ul>
                        </div>

                    </li>

                    <li>
                        <div class="dropdown">
                            <button class="btn-lg  btn-danger dropdown-toggle" type="button" data-toggle="dropdown">
                                Operações
                                <span class="caret"></span>
                            </button>


                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Entrada de Produtos", "EntradaEstoque", "Operaçao")</li>
                                <li>@Html.ActionLink("Saída de Produtos", "SaidaProduto", "Operação")</li>
                                <li>@Html.ActionLink("Lançamento de Perdas", "LancPerdaProduto", "Operaçao")</li>
                                <li>@Html.ActionLink("Saída de Produtos", "SaidaEstoque", "Operaçao")</li>
                            </ul>
                            </div>

                    </li>

                    <li>
                        <div class="dropdown">
                            <button class="btn-lg  btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                                Relatórios<span class="caret"></span>
                                    </button>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                                </ul>
                                </div>
                    </li>
                    <li>
                        <div class="dropdown">
                            <button class="btn-lg  btn-success dropdown-toggle" type="button" data-toggle="dropdown">
                                Gráficos<span class="caret"></span>
                            </button>
                                
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                                </ul>
                                </div>
                    </li>
                    
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                     </ul>
               </div>
            </div>
        </div>
   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Controle de Estoque</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
